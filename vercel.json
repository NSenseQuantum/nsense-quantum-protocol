{
  "version": 2,
  "builds": [
    {
      "src": "client/**",
      "use": "@vercel/static",
      "config": {
        "zeroConfig": true
      }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "server/**",
          "shared/**"
        ],
        "excludeFiles": [
          "attached_assets/**",
          "client/**",
          "node_modules/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
